@model LoginRequest

<div id="login-modal"
     class="modal fixed inset-0 bg-black/60 backdrop-blur-sm flex items-center justify-center p-4 z-50 hidden">
    <div class="modal-content bg-white dark:bg-gray-800 rounded-2xl shadow-xl w-full max-w-md p-8 transform scale-95 opacity-0 transition-all duration-300">

        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Login</h2>
            <button id="close-login-modal"
                    class="text-gray-500 dark:text-gray-400 hover:text-gray-800 dark:hover:text-white text-2xl leading-none">
                &times;
            </button>
        </div>

        <form id="login-form" asp-area="Identity" asp-controller="Account" asp-action="Login" method="post" class="space-y-4">
            <div>
                <input asp-for="Email" placeholder="Email Address" type="email"
                       class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <input asp-for="Password" placeholder="Password" type="password"
                       class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>
            <div class="flex items-center justify-between">
                <label class="flex items-center text-gray-600 dark:text-gray-300 text-sm">
                    <input asp-for="RememberMe" type="checkbox" class="mr-2" />
                    Remember Me
                </label>
                <a href="#" class="text-sm text-blue-600 dark:text-blue-400 hover:underline">Forgot Password?</a>
            </div>

            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

            <button type="submit"
                    class="w-full bg-blue-600 text-white font-bold py-3 rounded-lg hover:bg-blue-700 transition-colors">
                Login
            </button>
        </form>

        <!-- Divider -->
        <div class="flex items-center my-6">
            <div class="flex-grow border-t border-gray-300 dark:border-gray-600"></div>
            <span class="px-3 text-gray-500 dark:text-gray-400 text-sm">or</span>
            <div class="flex-grow border-t border-gray-300 dark:border-gray-600"></div>
        </div>

        <!-- Google Login -->
        <a asp-area="Identity" asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Google"
           class="w-full flex items-center justify-center bg-white border border-gray-300 rounded-lg py-3 hover:bg-gray-100 transition-colors">
            <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" alt="Google" class="w-5 h-5 mr-2" />
            <span class="text-gray-700 font-medium">Continue with Google</span>
        </a>

        <div id="login-modal" class="modal ...">
            ...
            @if (TempData["LoginError"] != null)
            {
                <p class="text-red-600">@TempData["LoginError"]</p>
            }
        </div>
    </div>
</div>


