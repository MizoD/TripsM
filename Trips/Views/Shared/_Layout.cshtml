<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Go Trip</title>
    <script type="importmap"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Trips.styles.css" asp-append-version="true" />
    <script>
        tailwind.config = { darkMode: 'class' }

        if (localStorage.getItem("theme") === "dark") {
            document.documentElement.classList.add("dark");
        }
    </script>

</head>
<body class="bg-gray-50 dark:bg-gray-900 text-gray-800 dark:text-gray-200 antialiased flex flex-col min-h-screen">

    <!-- Header Section -->
    <header class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm shadow-md sticky top-0 z-50">
        <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="text-2xl font-bold text-blue-600 dark:text-blue-500">GoTrip <i class="fas fa-plane-departure ml-1"></i></a>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex space-x-8 items-center">
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">Home</a>
                <a asp-area="Customer" asp-controller="Flight" asp-action="Index" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">Flights</a>
                <a asp-area="Customer" asp-controller="Hotel" asp-action="Index" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">Hotels</a>
                <a asp-area="Customer" asp-controller="Trip" asp-action="Index" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">Trips</a>
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" asp-fragment="contact"
                   class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">
                    Contact
                </a>
            </div>

            <!-- Right side controls -->
            <div class="flex items-center space-x-2 sm:space-x-4">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <!-- If user IS logged in -->
                    <div id="user-menu" class="relative md:block">
                        <!-- Username button -->
                        <button id="user-menu-button"
                                class="flex items-center space-x-2 focus:outline-none p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition duration-200">
                            <span id="username-display" class="font-medium text-gray-700 dark:text-gray-200">
                                @User.Identity.Name
                            </span>
                            <svg class="w-4 h-4 text-gray-600 dark:text-gray-300 transition-transform duration-200"
                                 id="dropdown-arrow" xmlns="http://www.w3.org/2000/svg" fill="none"
                                 viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M19 9l-7 7-7-7" />
                            </svg>
                        </button>

                        <!-- Dropdown -->
                        <div id="user-dropdown"
                             class="absolute right-0 mt-2 w-48 bg-white/80 dark:bg-gray-800/80 backdrop-blur-md rounded-xl shadow-lg py-2 z-50 transform transition-all duration-300 ease-out opacity-0 -translate-y-2 scale-95 pointer-events-none border border-gray-200/30 dark:border-gray-700/40">

                            <a asp-area="Identity" asp-controller="Profile" asp-action="Dashboard"
                               class="dropdown-item block px-4 py-2 text-sm text-gray-700 dark:text-gray-200 hover:bg-gray-100/70 dark:hover:bg-gray-600/70 rounded-md transition opacity-0 translate-y-1">
                                Dashboard
                            </a>
                            <form method="post" asp-area="Identity" asp-controller="Account" asp-action="Logout" class="block">
                                <button type="submit"
                                        class="dropdown-item w-full text-left px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-red-50/70 dark:hover:bg-gray-600/70 rounded-md transition opacity-0 translate-y-1">
                                    Logout
                                </button>
                            </form>
                        </div>
                    </div>

                    <script>
                        const userMenuBtn = document.getElementById("user-menu-button");
                        const userDropdown = document.getElementById("user-dropdown");
                        const dropdownArrow = document.getElementById("dropdown-arrow");
                        const dropdownItems = document.querySelectorAll("#user-dropdown .dropdown-item");

                        userMenuBtn.addEventListener("click", () => {
                            const isOpen = userDropdown.classList.contains("opacity-100");

                            if (isOpen) {
                                // Closing animation
                                userDropdown.classList.remove("opacity-100", "translate-y-0", "scale-100", "pointer-events-auto");
                                userDropdown.classList.add("opacity-0", "-translate-y-2", "scale-95", "pointer-events-none");
                                dropdownArrow.classList.remove("rotate-180");

                                dropdownItems.forEach((item) => {
                                    item.classList.add("opacity-0", "translate-y-1");
                                });
                            } else {
                                // Opening animation
                                userDropdown.classList.remove("opacity-0", "-translate-y-2", "scale-95", "pointer-events-none");
                                userDropdown.classList.add("opacity-100", "translate-y-0", "scale-100", "pointer-events-auto");
                                dropdownArrow.classList.add("rotate-180");

                                dropdownItems.forEach((item, index) => {
                                    setTimeout(() => {
                                        item.classList.remove("opacity-0", "translate-y-1");
                                    }, index * 100);
                                });
                            }
                        });

                        // Close dropdown if clicking outside
                        document.addEventListener("click", (e) => {
                            if (!userMenuBtn.contains(e.target) && !userDropdown.contains(e.target)) {
                                userDropdown.classList.remove("opacity-100", "translate-y-0", "scale-100", "pointer-events-auto");
                                userDropdown.classList.add("opacity-0", "-translate-y-2", "scale-95", "pointer-events-none");
                                dropdownArrow.classList.remove("rotate-180");

                                dropdownItems.forEach((item) => {
                                    item.classList.add("opacity-0", "translate-y-1");
                                });
                            }
                        });
                    </script>

                }
                else
                {
                    <!-- If user is NOT logged in -->
                    <div id="auth-container" class="md:flex items-center space-x-2">
                        <button id="open-login-modal"
                                class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium px-3 py-2 rounded-lg transition-colors duration-300">
                            Login
                        </button>
                        <button id="open-register-modal"
                                class="bg-blue-600 text-white px-4 py-2 rounded-full hover:bg-blue-700 transition-colors duration-300 font-medium">
                            Register
                        </button>
                    </div>
                }

                <!-- Dark mode toggle -->
                <button id="dark-mode-toggle" class="p-2 w-10 h-10 flex items-center justify-center rounded-full text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none">
                    <i class="fas fa-moon"></i>
                </button>

                <!-- Mobile menu -->
                <div class="md:hidden">
                    <button id="mobile-menu-button" class="p-2 w-10 h-10 flex items-center justify-center text-gray-600 dark:text-gray-300 focus:outline-none">
                        <i class="fas fa-bars fa-lg"></i>
                    </button>
                </div>
            </div>
        </nav>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">
            <a href="#home" class="block py-3 px-4 text-base text-gray-700 dark:text-gray-300 hover:bg-blue-50 dark:hover:bg-gray-700">Home</a>
            <a href="#flights" class="block py-3 px-4 text-base text-gray-700 dark:text-gray-300 hover:bg-blue-50 dark:hover:bg-gray-700">Flights</a>
            <a href="#destinations" class="block py-3 px-4 text-base text-gray-700 dark:text-gray-300 hover:bg-blue-50 dark:hover:bg-gray-700">Destinations</a>
            <a href="#contact" class="block py-3 px-4 text-base text-gray-700 dark:text-gray-300 hover:bg-blue-50 dark:hover:bg-gray-700">Contact</a>
            <div id="mobile-auth-container" class="border-t border-gray-200 dark:border-gray-700 p-2"></div>
        </div>
    </header>

    <main role="main" class="flex-grow container mx-auto px-6 py-10">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 dark:bg-gray-900 text-white py-6 shadow-lg">
        <div class="container mx-auto px-6 text-center">
            <div class="mb-3 space-x-6">
                <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300"><i class="fab fa-facebook-f fa-lg"></i></a>
                <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300"><i class="fab fa-twitter fa-lg"></i></a>
                <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300"><i class="fab fa-instagram fa-lg"></i></a>
            </div>
            <p class="text-gray-500 text-sm">&copy; 2024 GoTrip. All Rights Reserved.</p>
        </div>
    </footer>

    <!-- Modals -->
    <!-- Login Modal -->
    @await Html.PartialAsync("_LoginModal", new LoginRequest())

    <!-- Register Modal -->
    @await Html.PartialAsync("_RegisterModal", new RegisterRequest())

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
