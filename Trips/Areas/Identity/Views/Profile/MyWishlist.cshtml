@model WishlistVM

@{
    ViewData["Title"] = "My Wishlist";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="wishlist-container">
    <div class="wishlist-header slide-in-up">
        <h1><i class="fas fa-heart me-2"></i>My Wishlist</h1>
        <p>All your saved trips, flights, and hotels in one place</p>
    </div>

    <div class="alert-container">
        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="fas fa-info-circle me-2"></i> @TempData["InfoMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>

    @if ((Model.MyTripsWishlist != null && Model.MyTripsWishlist.Any()) ||
        (Model.MyFlightsWishlist != null && Model.MyFlightsWishlist.Any()) ||
        (Model.MyHotelsWishlist != null && Model.MyHotelsWishlist.Any()))
    {
        <!-- Trips Wishlist Section -->
        @if (Model.MyTripsWishlist != null && Model.MyTripsWishlist.Any())
        {
            <div class="wishlist-section fade-in">
                <div class="section-header">
                    <h2><i class="fas fa-route me-2"></i>Saved Trips</h2>
                    <p>Your favorite travel experiences</p>
                </div>
                <div class="wishlist-grid">
                    @foreach (var item in Model.MyTripsWishlist)
                    {
                        <div class="wishlist-card">
                            <div class="wishlist-header">
                                <div class="wishlist-title">@item.Trip.Title</div>
                                <div class="wishlist-actions">
                                    <button class="btn-action btn-remove" data-type="trip" data-id="@item.TripId">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="wishlist-content">
                                <div class="wishlist-info">
                                    <div class="info-item">
                                        <i class="fas fa-calendar"></i>
                                        <div>
                                            <div class="info-label">Added On</div>
                                            <div class="info-value">@item.AddedAt.ToString("MMM dd, yyyy")</div>
                                        </div>
                                    </div>
                                    @if (item.Trip.Price > 0)
                                    {
                                        <div class="info-item">
                                            <i class="fas fa-tag"></i>
                                            <div>
                                                <div class="info-label">Price</div>
                                                <div class="info-value">$@item.Trip.Price.ToString("N2")</div>
                                            </div>
                                        </div>
                                    }
                                    
                                    
                                        <div class="info-item">
                                            <i class="fas fa-clock"></i>
                                            <div>
                                                <div class="info-label">Duration</div>
                                                <div class="info-value">@item.Trip.DurationDays</div>
                                            </div>
                                        </div>
                                    
                                </div>
                                @if (!string.IsNullOrEmpty(item.Trip.Description))
                                {
                                    <div class="wishlist-description">
                                        <p>@(item.Trip.Description.Length > 150 ? item.Trip.Description.Substring(0, 150) + "..." : item.Trip.Description)</p>
                                    </div>
                                }
                            </div>
                            <div class="wishlist-footer">
                                <a href="~/Customer/Trip/Details/@item.TripId" class="btn-action btn-view">
                                    <i class="fas fa-eye me-2"></i>View Details
                                </a>
                                <button class="btn-action btn-book">
                                    <i class="fas fa-shopping-cart me-2"></i>Book Now
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Flights Wishlist Section -->
        @if (Model.MyFlightsWishlist != null && Model.MyFlightsWishlist.Any())
        {
            <div class="wishlist-section fade-in">
                <div class="section-header">
                    <h2><i class="fas fa-plane me-2"></i>Saved Flights</h2>
                    <p>Your preferred flight options</p>
                </div>
                <div class="wishlist-grid">
                    @foreach (var item in Model.MyFlightsWishlist)
                    {
                        <div class="wishlist-card">
                            <div class="wishlist-header">
                                <div class="wishlist-title">@item.Flight.Title</div>
                                <div class="wishlist-actions">
                                    <button class="btn-action btn-remove" data-type="flight" data-id="@item.FlightId">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="wishlist-content">
                                <div class="wishlist-info">
                                    <div class="info-item">
                                        <i class="fas fa-calendar"></i>
                                        <div>
                                            <div class="info-label">Added On</div>
                                            <div class="info-value">@item.AddedAt.ToString("MMM dd, yyyy")</div>
                                        </div>
                                    </div>
                                    @if (item.Flight.Price > 0)
                                    {
                                        <div class="info-item">
                                            <i class="fas fa-tag"></i>
                                            <div>
                                                <div class="info-label">Price</div>
                                                <div class="info-value">$@item.Flight.Price.ToString("N2")</div>
                                            </div>
                                        </div>
                                    }
                                    @if (item.Flight.DepartureTime > DateTime.UtcNow)
                                    {
                                        <div class="info-item">
                                            <i class="fas fa-plane-departure"></i>
                                            <div>
                                                <div class="info-label">Departure</div>
                                                <div class="info-value">@item.Flight.DepartureTime.ToString("MMM dd, yyyy HH:mm")</div>
                                            </div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(item.Flight.DepartureAirport.Name) && !string.IsNullOrEmpty(item.Flight.ArrivalAirport.Name))
                                    {
                                        <div class="info-item">
                                            <i class="fas fa-route"></i>
                                            <div>
                                                <div class="info-label">Route</div>
                                                <div class="info-value">@item.Flight.DepartureAirport.Name → @item.Flight.ArrivalAirport.Name</div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="wishlist-footer">
                                <a href="~/Customer/Flight/Details/@item.FlightId" class="btn-action btn-view">
                                    <i class="fas fa-eye me-2"></i>View Details
                                </a>
                                <button class="btn-action btn-book">
                                    <i class="fas fa-shopping-cart me-2"></i>Book Now
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Hotels Wishlist Section -->
        @if (Model.MyHotelsWishlist != null && Model.MyHotelsWishlist.Any())
        {
            <div class="wishlist-section fade-in">
                <div class="section-header">
                    <h2><i class="fas fa-hotel me-2"></i>Saved Hotels</h2>
                    <p>Your preferred accommodation options</p>
                </div>
                <div class="wishlist-grid">
                    @foreach (var item in Model.MyHotelsWishlist)
                    {
                        <div class="wishlist-card">
                            <div class="wishlist-header">
                                <div class="wishlist-title">@item.Hotel.Name</div>
                                <div class="wishlist-actions">
                                    <button class="btn-action btn-remove" data-type="hotel" data-id="@item.HotelId">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="wishlist-content">
                                <div class="wishlist-info">
                                    <div class="info-item">
                                        <i class="fas fa-calendar"></i>
                                        <div>
                                            <div class="info-label">Added On</div>
                                            <div class="info-value">@item.AddedAt.ToString("MMM dd, yyyy")</div>
                                        </div>
                                    </div>
                                    @if (item.Hotel.PricePerNight > 0)
                                    {
                                        <div class="info-item">
                                            <i class="fas fa-tag"></i>
                                            <div>
                                                <div class="info-label">Price/Night</div>
                                                <div class="info-value">$@item.Hotel.PricePerNight.ToString("N2")</div>
                                            </div>
                                        </div>
                                    }
                                    
                                    @if (!string.IsNullOrEmpty(item.Hotel.City))
                                    {
                                        <div class="info-item">
                                            <i class="fas fa-map-marker-alt"></i>
                                            <div>
                                                <div class="info-label">Location</div>
                                                <div class="info-value">@item.Hotel.City</div>
                                            </div>
                                        </div>
                                    }
                                </div>
                                @if (!string.IsNullOrEmpty(item.Hotel.Description))
                                {
                                    <div class="wishlist-description">
                                        <p>@(item.Hotel.Description.Length > 150 ? item.Hotel.Description.Substring(0, 150) + "..." : item.Hotel.Description)</p>
                                    </div>
                                }
                            </div>
                            <div class="wishlist-footer">
                                <a href="~/Customer/Hotel/Details/@item.HotelId" class="btn-action btn-view">
                                    <i class="fas fa-eye me-2"></i>View Details
                                </a>
                                <button class="btn-action btn-book">
                                    <i class="fas fa-shopping-cart me-2"></i>Book Now
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="empty-state fade-in">
            <div class="empty-icon">
                <i class="fas fa-heart"></i>
            </div>
            <h3>Your Wishlist is Empty</h3>
            <p>Start saving your favorite trips, flights, and hotels for easy access later!</p>
            <div class="empty-actions">
                <a href="~/Customer/Trip/Index" class="btn btn-elegant-primary me-3">
                    <i class="fas fa-route me-2"></i>Explore Trips
                </a>
                <a href="~/Customer/Flight/Index" class="btn btn-elegant-primary me-3">
                    <i class="fas fa-plane me-2"></i>Browse Flights
                </a>
                <a href="~/Customer/Hotel/Index" class="btn btn-elegant-primary">
                    <i class="fas fa-hotel me-2"></i>Discover Hotels
                </a>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .wishlist-container {
            padding: 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .wishlist-header {
            text-align: center;
            margin-bottom: 2.5rem;
            padding: 2rem;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            border-radius: 20px;
            border: 1px solid #e2e8f0;
        }

            .wishlist-header h1 {
                font-weight: 700;
                color: #1e293b;
                margin-bottom: 0.5rem;
                font-size: 2.5rem;
                background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

            .wishlist-header p {
                color: #64748b;
                font-size: 1.1rem;
                margin: 0;
            }

        .wishlist-section {
            margin-bottom: 3rem;
        }

        .section-header {
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #f1f5f9;
        }

            .section-header h2 {
                font-weight: 600;
                color: #374151;
                display: flex;
                align-items: center;
                margin-bottom: 0.5rem;
            }

            .section-header p {
                color: #64748b;
                margin: 0;
            }

        .wishlist-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 1.5rem;
        }

        @@media (max-width: 768px) {
            .wishlist-grid {
                grid-template-columns: 1fr;
            }
        }

        .wishlist-card {
            background: white;
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            border: 1px solid #e2e8f0;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

            .wishlist-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
            }

        .wishlist-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
        }

        .wishlist-title {
            font-weight: 600;
            color: #1e293b;
            font-size: 1.2rem;
            margin-right: 1rem;
        }

        .wishlist-actions {
            display: flex;
        }

        .wishlist-content {
            flex: 1;
            margin-bottom: 1.5rem;
        }

        .wishlist-info {
            display: grid;
            grid-template-columns: 1fr;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .info-item {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            padding: 0.5rem;
            background: #f8fafc;
            border-radius: 8px;
        }

            .info-item i {
                color: #8b5cf6;
                font-size: 1rem;
                margin-top: 0.25rem;
                min-width: 16px;
            }

        .info-label {
            font-size: 0.75rem;
            color: #64748b;
            margin-bottom: 0.15rem;
        }

        .info-value {
            font-weight: 500;
            color: #374151;
            font-size: 0.9rem;
        }

        .wishlist-description {
            padding: 0.75rem;
            background: #f8fafc;
            border-radius: 8px;
            font-size: 0.9rem;
            color: #64748b;
            line-height: 1.5;
        }

        .wishlist-footer {
            display: flex;
            gap: 0.75rem;
            justify-content: flex-end;
            flex-wrap: wrap;
            margin-top: auto;
        }

        .btn-action {
            padding: 0.6rem 1rem;
            border: none;
            border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
        }

        .btn-remove {
            background: #fef2f2;
            color: #ef4444;
            padding: 0.5rem;
        }

            .btn-remove:hover {
                background: #fee2e2;
                transform: translateY(-2px);
            }

        .btn-view {
            background: #eff6ff;
            color: #3b82f6;
        }

            .btn-view:hover {
                background: #dbeafe;
                transform: translateY(-2px);
            }

        .btn-book {
            background: #ecfdf5;
            color: #10b981;
        }

            .btn-book:hover {
                background: #d1fae5;
                transform: translateY(-2px);
            }

        .empty-state {
            text-align: center;
            padding: 3rem 2rem;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            border: 1px solid #e2e8f0;
        }

        .empty-icon {
            font-size: 4rem;
            color: #cbd5e1;
            margin-bottom: 1.5rem;
            background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .empty-state h3 {
            font-weight: 600;
            color: #374151;
            margin-bottom: 1rem;
        }

        .empty-state p {
            color: #64748b;
            margin-bottom: 2rem;
        }

        .empty-actions {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .btn-elegant-primary {
            text-decoration: none !important;
        }

        /* Animations */
        .slide-in-up {
            opacity: 0;
            transform: translateY(30px);
            animation: slideInUp 0.6s ease forwards;
        }

        .fade-in {
            opacity: 0;
            animation: fadeIn 0.8s ease forwards;
        }

        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add hover effects to wishlist cards
            const wishlistCards = document.querySelectorAll('.wishlist-card');
            wishlistCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                    this.style.boxShadow = '0 15px 40px rgba(0, 0, 0, 0.12)';
                });

                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                    this.style.boxShadow = '0 10px 30px rgba(0, 0, 0, 0.08)';
                });
            });

            // Action button effects
            const actionButtons = document.querySelectorAll('.btn-action');
            actionButtons.forEach(button => {
                button.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });

                button.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });

            // Remove from wishlist functionality
            const removeButtons = document.querySelectorAll('.btn-remove');
            removeButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const type = this.getAttribute('data-type');
                    const id = this.getAttribute('data-id');

                    if (confirm('Are you sure you want to remove this item from your wishlist?')) {
                        // You'll need to implement the AJAX call to remove the item
                        console.log(`Remove ${type} with ID: ${id}`);

                        // For now, just remove the card from the UI
                        this.closest('.wishlist-card').style.opacity = '0';
                        setTimeout(() => {
                            this.closest('.wishlist-card').remove();

                            // Check if all sections are empty and show empty state if needed
                            checkEmptyWishlist();
                        }, 300);
                    }
                });
            });

            // Auto-dismiss alerts
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });

            function checkEmptyWishlist() {
                const tripsSection = document.querySelector('.wishlist-section:first-child');
                const flightsSection = document.querySelector('.wishlist-section:nth-child(2)');
                const hotelsSection = document.querySelector('.wishlist-section:last-child');

                const tripsEmpty = !tripsSection || tripsSection.querySelectorAll('.wishlist-card').length === 0;
                const flightsEmpty = !flightsSection || flightsSection.querySelectorAll('.wishlist-card').length === 0;
                const hotelsEmpty = !hotelsSection || hotelsSection.querySelectorAll('.wishlist-card').length === 0;

                if (tripsEmpty && flightsEmpty && hotelsEmpty) {
                    // Show empty state
                    const emptyState = document.querySelector('.empty-state');
                    if (emptyState) {
                        emptyState.style.display = 'block';
                    } else {
                        // Create empty state if it doesn't exist
                        const wishlistContainer = document.querySelector('.wishlist-container');
                        const emptyStateHTML = `
                            <div class="empty-state fade-in">
                                <div class="empty-icon">
                                    <i class="fas fa-heart"></i>
                                </div>
                                <h3>Your Wishlist is Empty</h3>
                                <p>Start saving your favorite trips, flights, and hotels for easy access later!</p>
                                <div class="empty-actions">
                                    <a href="~/Customer/Trip/Index" class="btn btn-elegant-primary me-3">
                                        <i class="fas fa-route me-2"></i>Explore Trips
                                    </a>
                                    <a href="~/Customer/Flight/Index" class="btn btn-elegant-primary me-3">
                                        <i class="fas fa-plane me-2"></i>Browse Flights
                                    </a>
                                    <a href="~/Customer/Hotel/Index" class="btn btn-elegant-primary">
                                        <i class="fas fa-hotel me-2"></i>Discover Hotels
                                    </a>
                                </div>
                            </div>
                        `;
                        wishlistContainer.insertAdjacentHTML('beforeend', emptyStateHTML);
                    }

                    // Remove all sections
                    const sections = document.querySelectorAll('.wishlist-section');
                    sections.forEach(section => section.remove());
                }
            }
        });
    </script>
}