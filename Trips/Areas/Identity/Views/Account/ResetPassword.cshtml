@model ResetPasswordRequest
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Reset Password";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 dark:bg-gray-900 px-4 py-12">
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl w-full max-w-md p-8 transform animate-fade-in-up">

        <!-- Header -->
        <div class="text-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Reset Password</h2>
            <p class="text-gray-500 dark:text-gray-400 text-sm mt-1">
                Enter the OTP sent to your email along with your new password.
            </p>
        </div>

        <!-- Validation Summary -->
        <div asp-validation-summary="All" class="text-red-600 text-sm mb-4"></div>

        <!-- Reset Password Form -->
        <form asp-area="Identity" asp-controller="Account" asp-action="ResetPassword" method="post" class="space-y-4">
            <input type="hidden" asp-for="UserId" />

            <div>
                <input asp-for="OTP" placeholder="Enter OTP" type="text"
                       class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="OTP" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <input asp-for="Password" placeholder="New Password" type="password"
                       class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" type="password"
                       class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
            </div>

            <button type="submit"
                    class="w-full bg-blue-600 text-white font-bold py-3 rounded-lg hover:bg-blue-700 transition-colors">
                Reset Password
            </button>
        </form>

        <!-- Success -->
        @if (TempData["Success"] != null)
        {
            <p class="mt-4 text-green-600 text-center">@TempData["Success"]</p>
        }

        <!-- Extra Links -->
        <div class="mt-6 text-center space-y-2">
            <p class="text-sm text-gray-600 dark:text-gray-300">
                Remembered your password?
                <a asp-area="Identity" asp-controller="Account" asp-action="Login"
                   class="text-blue-600 dark:text-blue-400 hover:underline font-medium">Login</a>
            </p>
            <p class="text-sm text-gray-600 dark:text-gray-300">
                Didn’t receive the OTP?
                <a asp-area="Identity" asp-controller="Account" asp-action="ForgetPassword"
                   class="text-blue-600 dark:text-blue-400 hover:underline font-medium">Resend OTP</a>
            </p>
        </div>
    </div>
</div>
