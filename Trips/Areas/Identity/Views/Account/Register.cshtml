@model RegisterRequest
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 dark:bg-gray-900 px-4 py-12">
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl w-full max-w-md p-8 transform animate-fade-in-up">

        <!-- Header -->
        <div class="text-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Create Account</h2>
            <p class="text-gray-500 dark:text-gray-400 text-sm mt-1">Join us and get started in seconds.</p>
        </div>

        <!-- Register Form -->
        <form asp-area="Identity" asp-controller="Account" asp-action="Register" method="post" class="space-y-4">
            <div class="flex gap-4">
                <div class="w-1/2">
                    <input asp-for="FirstName" placeholder="First Name"
                           class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600 focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="FirstName" class="text-red-600 text-sm"></span>
                </div>
                <div class="w-1/2">
                    <input asp-for="LastName" placeholder="Last Name"
                           class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600 focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="LastName" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <div>
                <input asp-for="UserName" placeholder="Username"
                       class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="UserName" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <input asp-for="Email" placeholder="Email Address" type="email"
                       class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <input asp-for="Password" placeholder="Password" type="password"
                       class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <input asp-for="PasswordConfirmation" placeholder="Confirm Password" type="password"
                       class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="PasswordConfirmation" class="text-red-600 text-sm"></span>
            </div>

            <button type="submit"
                    class="w-full bg-blue-600 text-white font-bold py-3 rounded-lg hover:bg-blue-700 transition-colors">
                Create Account
            </button>
        </form>

        <!-- Divider -->
        <div class="my-6 flex items-center">
            <div class="flex-grow border-t border-gray-300 dark:border-gray-600"></div>
            <span class="px-4 text-sm text-gray-500 dark:text-gray-400">or</span>
            <div class="flex-grow border-t border-gray-300 dark:border-gray-600"></div>
        </div>

        <!-- External Login -->
        <div class="space-y-3">
            <a asp-area="Identity" asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Google"
               class="flex items-center justify-center w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-700 transition">
                <img src="https://www.svgrepo.com/show/475656/google-color.svg" class="h-5 w-5 mr-2" alt="Google">
                Continue with Google
            </a>
        </div>

        <!-- Errors -->
        @if (TempData["RegisterError"] != null)
        {
            <p class="mt-4 text-red-600 text-center">@TempData["RegisterError"]</p>
        }
        @if (TempData["RegisterSuccess"] != null)
        {
            <p class="mt-4 text-green-600 text-center">@TempData["RegisterSuccess"]</p>
        }
    </div>
</div>

<!-- Simple fade-up animation -->
<style>
    @@keyframes fade-in-up {
        from

    {
        opacity: 0;
        transform: translateY(20px) scale(0.95);
    }

    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }

    }

    .animate-fade-in-up {
        animation: fade-in-up 0.5s ease-out forwards;
    }
</style>
