@model LoginRequest
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 dark:bg-gray-900 px-4 py-12">
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl w-full max-w-md p-8 transform animate-fade-in-up">

        <!-- Header -->
        <div class="text-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Login</h2>
            <p class="text-gray-500 dark:text-gray-400 text-sm mt-1">Welcome back! Please login to continue.</p>
        </div>

        <!-- Login Form -->
        <form asp-area="Identity" asp-controller="Account" asp-action="Login" method="post" class="space-y-4">
            <div>
                <input asp-for="Email" placeholder="Email Address" type="email"
                       class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <input asp-for="Password" placeholder="Password" type="password"
                       class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex items-center justify-between">
                <label class="flex items-center text-gray-600 dark:text-gray-300 text-sm">
                    <input asp-for="RememberMe" type="checkbox" class="mr-2" />
                    Remember Me
                </label>
                <a asp-area="Identity" asp-controller="Account" asp-action="ForgetPassword"
                   class="text-sm text-blue-600 dark:text-blue-400 hover:underline">Forgot Password?</a>
            </div>

            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

            <button type="submit"
                    class="w-full bg-blue-600 text-white font-bold py-3 rounded-lg hover:bg-blue-700 transition-colors">
                Login
            </button>
        </form>

        <!-- Errors -->
        @if (TempData["LoginError"] != null)
        {
            <p class="mt-4 text-red-600 text-center">@TempData["LoginError"]</p>
        }

        <!-- Divider -->
        <div class="flex items-center my-6">
            <div class="flex-grow border-t border-gray-300 dark:border-gray-600"></div>
            <span class="px-3 text-gray-500 dark:text-gray-400 text-sm">or</span>
            <div class="flex-grow border-t border-gray-300 dark:border-gray-600"></div>
        </div>

        <!-- Google Login -->
        <a asp-area="Identity" asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Google"
           class="w-full flex items-center justify-center bg-white border border-gray-300 rounded-lg py-3 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
            <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" alt="Google" class="w-5 h-5 mr-2" />
            <span class="text-gray-700 dark:text-gray-200 font-medium">Continue with Google</span>
        </a>

        <!-- Extra Links -->
        <div class="mt-6 text-center space-y-2">
            <p class="text-sm text-gray-600 dark:text-gray-300">
                Don’t have an account?
                <a asp-area="Identity" asp-controller="Account" asp-action="Register"
                   class="text-blue-600 dark:text-blue-400 hover:underline font-medium">Register</a>
            </p>
            <p class="text-sm text-gray-600 dark:text-gray-300">
                Didn’t receive confirmation?
                <a asp-area="Identity" asp-controller="Account" asp-action="ResendEmailConfirmation"
                   class="text-blue-600 dark:text-blue-400 hover:underline font-medium">Resend Email Confirmation</a>
            </p>
        </div>
    </div>
</div>

<!-- Simple fade-up animation -->
<style>
    @@keyframes fade-in-up {
        from

    {
        opacity: 0;
        transform: translateY(20px) scale(0.95);
    }

    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }

    }

    .animate-fade-in-up {
        animation: fade-in-up 0.5s ease-out forwards;
    }
</style>
