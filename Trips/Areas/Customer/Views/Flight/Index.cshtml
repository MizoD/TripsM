@model PaginatedFlightResponse

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Flights";
}

<div class="max-w-7xl mx-auto bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
    <!-- Enhanced Breadcrumb -->
    <nav class="flex items-center space-x-2 text-sm mb-8">
        <a asp-area="Customer" asp-controller="Home" asp-action="Index"
           class="text-blue-500 hover:text-blue-700 transition-colors duration-200 font-medium">
            Home
        </a>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-gray-600 font-medium">All Flights</span>
    </nav>

    <!-- Header Section -->
    <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-2">Available Flights</h1>
        <p class="text-gray-500">Find and book your perfect flight</p>
    </div>

    <!-- Modern Filter Card -->
    <div class="bg-gray-50 rounded-xl p-6 mb-8 border border-gray-200">
        <form method="get" class="grid grid-cols-1 lg:grid-cols-5 gap-4 items-end">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Country</label>
                <input type="text" name="country" value="@Context.Request.Query["country"]"
                       placeholder="Enter country..."
                       class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Departure Date</label>
                <input type="date" name="date" value="@Context.Request.Query["date"]"
                       class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Sort By</label>
                <select name="sortBy"
                        class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-white">
                    <option value="price" selected="@("price" == Context.Request.Query["sortBy"])">Price</option>
                    <option value="date" selected="@("date" == Context.Request.Query["sortBy"])">Departure Date</option>
                    <option value="duration" selected="@("duration" == Context.Request.Query["sortBy"])">Duration</option>
                </select>
            </div>

            <div class="lg:col-span-2">
                <button type="submit"
                        class="w-full bg-blue-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-blue-700 active:bg-blue-800 transform hover:scale-105 transition-all duration-200 shadow-sm">
                    Apply Filters
                </button>
            </div>
        </form>
    </div>

    <!-- Flight Cards Grid -->
    <div class="space-y-6">
        @if (Model.Data != null && Model.Data.Any())
        {
            foreach (var flight in Model.Data)
            {
                <div class="group border border-gray-200 rounded-xl p-6 hover:shadow-lg transition-all duration-300 hover:border-blue-200 bg-white">
                    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-4">
                        <div class="flex items-center space-x-4 mb-4 lg:mb-0">
                            <h2 class="text-xl font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">@flight.Title</h2>
                            <span class="px-3 py-1 rounded-full text-xs font-medium @(flight.Status == FlightStatus.Departed ? "bg-green-100 text-green-800" : "bg-yellow-100 text-yellow-800")">
                                @flight.Status
                            </span>
                        </div>
                        <div class="text-2xl font-bold text-gray-900">$@flight.Price</div>
                    </div>

                    <!-- Flight Route -->
                    <div class="flex items-center space-x-4 mb-4">
                        <div class="text-center">
                            <div class="font-semibold text-gray-900">@flight.DepartureAirport?.Name</div>
                            <div class="text-sm text-gray-500">@flight.DepartureTime.ToString("MMM dd, yyyy")</div>
                            <div class="text-lg font-medium text-gray-900">@flight.DepartureTime.ToString("HH:mm")</div>
                        </div>

                        <div class="flex-1 flex items-center justify-center">
                            <div class="w-full border-t border-gray-300 border-dashed relative">
                                <div class="absolute -top-2 left-1/2 transform -translate-x-1/2">
                                    <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <div class="font-semibold text-gray-900">@flight.ArrivalAirport?.Name</div>
                            <div class="text-sm text-gray-500">@flight.ArrivalTime.ToString("MMM dd, yyyy")</div>
                            <div class="text-lg font-medium text-gray-900">@flight.ArrivalTime.ToString("HH:mm")</div>
                        </div>
                    </div>

                    <!-- Action Button -->
                    <div class="flex justify-end">
                        <a asp-area="Customer" asp-controller="Flight" asp-action="Details" asp-route-id="@flight.Id"
                           class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transform hover:scale-105 transition-all duration-200 shadow-sm">
                            View Details
                            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                            </svg>
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center py-12">
                <svg class="mx-auto w-16 h-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No flights found</h3>
                <p class="text-gray-500">Try adjusting your filters to find more results</p>
            </div>
        }
    </div>

    <!-- Enhanced Pagination -->
    @if (Model.TotalPages > 1)
    {
        <div class="flex justify-center items-center space-x-2 mt-12">
            @if (Model.PageNumber > 1)
            {
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                   asp-route-country="@Context.Request.Query["country"]"
                   asp-route-date="@Context.Request.Query["date"]"
                   asp-route-sortBy="@Context.Request.Query["sortBy"]"
                   class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg font-medium text-gray-700 bg-white hover:bg-gray-50 transition-all duration-200">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                    Previous
                </a>
            }

            <div class="flex items-center space-x-1">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <a asp-action="Index"
                       asp-route-pageNumber="@i"
                       asp-route-country="@Context.Request.Query["country"]"
                       asp-route-date="@Context.Request.Query["date"]"
                       asp-route-sortBy="@Context.Request.Query["sortBy"]"
                       class="px-4 py-2 border rounded-lg font-medium transition-all duration-200 @(i == Model.PageNumber ? "bg-blue-600 text-white border-blue-600 shadow-sm" : "text-gray-700 border-gray-300 bg-white hover:bg-gray-50")">
                        @i
                    </a>
                }
            </div>

            @if (Model.PageNumber < Model.TotalPages)
            {
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                   asp-route-country="@Context.Request.Query["country"]"
                   asp-route-date="@Context.Request.Query["date"]"
                   asp-route-sortBy="@Context.Request.Query["sortBy"]"
                   class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg font-medium text-gray-700 bg-white hover:bg-gray-50 transition-all duration-200">
                    Next
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </a>
            }
        </div>
    }
</div>