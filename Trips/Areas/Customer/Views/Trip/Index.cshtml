@model PaginatedTripResponse

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Trips";
}

<div class="max-w-6xl mx-auto bg-white p-8 rounded-lg shadow-xl">

    <!-- Breadcrumb -->
    <nav class="text-sm font-medium text-gray-500 mb-6">
        <ol class="list-none p-0 inline-flex">
            <li class="flex items-center">
                <a asp-area="Customer" asp-controller="Home" asp-action="Index"
                   class="text-blue-600 hover:text-blue-800 transition-colors">Home</a>
                <svg class="fill-current w-3 h-3 mx-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                    <path d="M12.95 10.707l.707-.707L8 4.343 6.586 5.757 10.828 10l-4.242 4.243 1.414 1.414L12.95 10.707z" />
                </svg>
            </li>
            <li class="flex items-center">
                <span class="text-gray-700">All Trips</span>
            </li>
        </ol>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">Available Trips</h1>

    <!-- Filters -->
    <form method="get" class="mb-6 grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
        <input type="text" name="country" value="@Context.Request.Query["country"]"
               placeholder="Filter by Country"
               class="w-full border rounded-lg px-3 py-2 focus:ring focus:ring-blue-300" />

        <input type="text" name="tripType" value="@Context.Request.Query["tripType"]"
               placeholder="Filter by Trip Type"
               class="w-full border rounded-lg px-3 py-2 focus:ring focus:ring-blue-300" />

        <input type="date" name="startDate" value="@Context.Request.Query["startDate"]"
               class="w-full border rounded-lg px-3 py-2 focus:ring focus:ring-blue-300" />

        <button type="submit"
                class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
            Apply Filters
        </button>
    </form>

    <!-- Trip Cards -->
    <div class="space-y-6">
        @if (Model.Trips != null && Model.Trips.Any())
        {
            foreach (var trip in Model.Trips)
            {
                <div class="border rounded-lg p-4 shadow hover:shadow-md transition flex flex-col md:flex-row gap-4">
                    <!-- Main Image -->
                    <img src="@trip.ImageUrl"
                         alt="@trip.Title" class="w-full md:w-1/3 h-48 object-cover rounded-lg" />

                    <div class="flex-1 flex flex-col justify-between">
                        <div>
                            <div class="flex justify-between items-center">
                                <h2 class="text-xl font-semibold text-gray-800">@trip.Title</h2>
                                <span class="text-sm px-2 py-1 rounded bg-gray-200">@trip.AvailableSeats seats left</span>
                            </div>

                            <p class="text-gray-600 text-sm mt-1">
                                Country: <b>@trip.CountryName</b> | Type: <b>@trip.TripType</b>
                            </p>

                            <p class="text-gray-600 text-sm mt-1">
                                Duration: <b>@trip.DurationDays days</b> | Dates: <b>@trip.StartDate.ToString("dd MMM yyyy")</b> → <b>@trip.EndDate.ToString("dd MMM yyyy")</b>
                            </p>

                            <p class="text-gray-900 font-bold mt-2">
                                Price: $@trip.Price
                            </p>

                            <p class="text-yellow-600 text-sm mt-1">
                                Rating: ⭐ @trip.AverageRating.ToString("0.0") (@trip.ReviewCount reviews)
                            </p>
                        </div>

                        <!-- Buttons -->
                        <div class="mt-3 flex flex-wrap gap-2">
                            <a asp-area="Customer" asp-controller="Trip" asp-action="Details" asp-route-id="@trip.Id"
                               class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
                                View Details
                            </a>

                            <form asp-action="AddToCart" method="post" class="inline">
                                <input type="hidden" name="tripId" value="@trip.Id" />
                                <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
                                    Add to Cart
                                </button>
                            </form>

                            <form asp-action="AddToWishlist" method="post" class="inline">
                                <input type="hidden" name="tripId" value="@trip.Id" />
                                <button type="submit" class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600">
                                    Wishlist
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-gray-500">No trips found matching your filters.</p>
        }
    </div>

    <!-- Pagination -->
    <div class="flex justify-center items-center space-x-2 mt-8">
        @if (Model.CurrentPage > 1)
        {
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.CurrentPage - 1)"
               class="px-3 py-2 border rounded hover:bg-gray-200">Previous</a>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <a asp-action="Index"
               asp-route-pageNumber="@i"
               class="px-3 py-2 border rounded @(i == Model.CurrentPage ? "bg-blue-600 text-white" : "hover:bg-gray-200")">
                @i
            </a>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.CurrentPage + 1)"
               class="px-3 py-2 border rounded hover:bg-gray-200">Next</a>
        }
    </div>
</div>