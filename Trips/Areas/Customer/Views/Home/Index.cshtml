@model HomeVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home - Discover Your Next Adventure";
}

<!-- Hero Section -->
<section class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-blue-900/80 to-purple-900/80 z-0"></div>
    <div class="absolute inset-0">
        <div class="hero-slider">
            <div class="slide active" style="background-image: url('https://images.unsplash.com/photo-1488646953014-85cb44e25828?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80')"></div>
            <div class="slide" style="background-image: url('https://images.unsplash.com/photo-1469474968028-56623f02e42e?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80')"></div>
            <div class="slide" style="background-image: url('https://images.unsplash.com/photo-1506929562872-bb421503ef21?ixlib=rb-4.0.3&auto=format&fit=crop&w=2068&q=80')"></div>
        </div>
    </div>

    <div class="container mx-auto px-6 relative z-10 text-center text-white">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-5xl md:text-7xl font-bold mb-6 animate-fade-in-up">
                Discover Your Next
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-orange-500">
                    Adventure
                </span>
            </h1>

            <div class="rotating-words text-2xl md:text-3xl font-light mb-8 h-12">
                <span class="word active">Amazing Tours</span>
                <span class="word">Unforgettable Adventures</span>
                <span class="word">Luxury Flights</span>
                <span class="word">Beautiful Hotels</span>
                <span class="word">Package Deals</span>
            </div>

            <p class="text-xl md:text-2xl mb-8 opacity-90 max-w-3xl mx-auto">
                Book flights, find perfect stays, and explore the world with exclusive deals tailored for you.
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a asp-area="Customer" asp-controller="Flight" asp-action="Index" class="btn-primary animate-bounce-slow">
                    <i class="fas fa-plane-departure mr-2"></i>Book Flights
                </a>
                <a asp-area="Customer" asp-controller="Hotel" asp-action="Index" class="btn-secondary">
                    <i class="fas fa-hotel mr-2"></i>Find Hotels
                </a>
                <a asp-area="Customer" asp-controller="Trip" asp-action="Index" class="btn-accent">
                    <i class="fas fa-suitcase-rolling mr-2"></i>Explore Trips
                </a>
            </div>
        </div>
    </div>

    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <a href="#flights" class="text-white text-2xl">
            <i class="fas fa-chevron-down"></i>
        </a>
    </div>
</section>

<!-- Flight Search Section -->
<section id="flights" class="section-padding">
    <div class="container mx-auto px-6">
        <div class="text-center mb-12">
            <h2 class="section-title">Find Your Perfect Flight</h2>
            <p class="section-subtitle">Search and compare flights from hundreds of airlines</p>
        </div>

        <div class="max-w-6xl mx-auto bg-white dark:bg-gray-800 rounded-3xl shadow-2xl p-8 transform hover:scale-[1.02] transition-transform duration-300">
            <form asp-area="Customer" asp-controller="Flight" asp-action="Index" method="get" 
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 items-end">
                <div class="form-group">
                    <label for="from" class="form-label">From</label>
                    <select id="from" name="from" class="form-select">
                        <option value="" disabled selected hidden>Select departure</option>
                        @foreach (var country in Model.AirportsName)
                        {
                            <option value="@country">@country</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="country" class="form-label">To</label>
                    <select id="country" name="country" class="form-select">
                        <option value="" disabled selected hidden>Select destination</option>
                        @foreach (var country in Model.AirportsName)
                        {
                            <option value="@country">@country</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="departure" class="form-label">Departure</label>
                    <input type="date" id="departure" name="departureDate" class="form-input">
                </div>

                <div class="form-group">
                    <label for="return" class="form-label">Return</label>
                    <input type="date" id="return" name="returnDate" class="form-input">
                </div>

                <button type="submit" class="btn-primary lg:col-span-1 md:col-span-2">
                    <i class="fas fa-search mr-2"></i>Search Flights
                </button>
            </form>
        </div>
    </div>
</section>

<!-- Upcoming Flights Section -->
<section class="section-padding bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-6">
        <div class="text-center mb-12">
            <h2 class="section-title">Upcoming Flights</h2>
            <p class="section-subtitle">Don't miss these great flight deals</p>
        </div>

        <div class="flights-carousel relative">
            <div class="flights-container flex gap-6 overflow-x-auto pb-6 scrollbar-hide" id="flightsContainer">
                @foreach (var flight in Model.UpcomingFlights)
                {
                    <div class="flight-card min-w-[320px] bg-white dark:bg-gray-800 rounded-2xl shadow-lg overflow-hidden transform hover:scale-105 transition-transform duration-300">
                        <div class="p-6">
                            <div class="flex justify-between items-start mb-4">
                                <div>
                                    <h3 class="text-lg font-bold text-gray-800 dark:text-white">@flight.Title</h3>
                                    <p class="text-sm text-gray-600 dark:text-gray-400">@flight.DepartureAirport?.Name - @flight.ArrivalAirport?.Name</p>
                                </div>
                                <span class="status-badge @(flight.Status.ToString().ToLower())">@flight.Status</span>
                            </div>

                            <div class="flex items-center justify-between mb-4">
                                <div class="text-center">
                                    <div class="text-2xl font-bold text-blue-600">@flight.DepartureTime.ToString("HH:mm")</div>
                                    <div class="text-xs text-gray-600">@flight.DepartureAirport?.City</div>
                                </div>

                                <div class="flex-1 px-4 text-center">
                                    <div class="text-sm text-gray-600 mb-1">@flight.Duration.Hours h @flight.Duration.Minutes m</div>
                                    <div class="relative">
                                        <div class="h-1 bg-gray-300 rounded-full"></div>
                                        <div class="absolute top-0 left-0 h-1 bg-blue-600 rounded-full w-full"></div>
                                        <i class="fas fa-plane absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-blue-600 text-sm"></i>
                                    </div>
                                </div>

                                <div class="text-center">
                                    <div class="text-2xl font-bold text-green-600">@flight.ArrivalTime.ToString("HH:mm")</div>
                                    <div class="text-xs text-gray-600">@flight.ArrivalAirport?.City</div>
                                </div>
                            </div>

                            <div class="flex justify-between items-center">
                                <div class="text-lg font-bold text-gray-800 dark:text-white">
                                    $@flight.Price.ToString("N2")
                                </div>
                                <a asp-controller="Flight" asp-action="Details" asp-route-id="@flight.Id" class="btn-primary btn-sm">
                                    <i class="fas fa-shopping-cart mr-1"></i>Book Now
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <button class="carousel-nav prev" id="prevFlight">
                <i class="fas fa-chevron-left"></i>
            </button>
            <button class="carousel-nav next" id="nextFlight">
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </div>
</section>

<!-- Featured Trips Section -->
<section id="trips" class="section-padding">
    <div class="container mx-auto px-6">
        <div class="text-center mb-12">
            <h2 class="section-title">Featured Trips</h2>
            <p class="section-subtitle">Curated experiences for unforgettable memories</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            @foreach (var trip in Model.FeaturedTrips)
            {
                <div class="trip-card group bg-white dark:bg-gray-800 rounded-2xl shadow-lg overflow-hidden transform hover:scale-105 transition-all duration-300">
                    <div class="relative overflow-hidden">
                        <img src="@(trip.ImageUrl ?? "https://images.unsplash.com/photo-1488646953014-85cb44e25828?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80")"
                             alt="@trip.Title"
                             class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-500">
                        <div class="absolute top-4 right-4">
                            <span class="bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-semibold">
                                @trip.TripType
                            </span>
                        </div>
                        <div class="absolute bottom-4 left-4">
                            <div class="flex items-center text-white">
                                <i class="fas fa-star text-yellow-400 mr-1"></i>
                                <span class="font-semibold">@trip.Rate.ToString("N1")</span>
                            </div>
                        </div>
                    </div>

                    <div class="p-6">
                        <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-2">@trip.Title</h3>
                        <p class="text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-2">@trip.Description</p>

                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center text-sm text-gray-600 dark:text-gray-400">
                                <i class="fas fa-calendar-alt mr-2"></i>
                                <span>@trip.DurationDays days</span>
                            </div>
                            <div class="flex items-center text-sm text-gray-600 dark:text-gray-400">
                                <i class="fas fa-users mr-2"></i>
                                <span>@trip.AvailableSeats left</span>
                            </div>
                        </div>

                        <div class="flex items-center justify-between">
                            <div class="text-2xl font-bold text-green-600">
                                $@trip.Price.ToString("N2")
                            </div>
                            <a asp-controller="Trip" asp-action="Details" asp-route-id="@trip.Id" class="btn-primary btn-sm">
                                <i class="fas fa-eye mr-1"></i>View
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Hotels Section -->
<section id="hotels" class="section-padding bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-6">
        <div class="text-center mb-12">
            <h2 class="section-title">Featured Hotels</h2>
            <p class="section-subtitle">Luxury stays at unbeatable prices</p>
        </div>

        <div class="hotels-carousel relative">
            <div class="hotels-container flex gap-6 overflow-x-auto pb-6 scrollbar-hide" id="hotelsContainer">
                @foreach (var hotel in Model.Hotels)
                {
                    <div class="hotel-card min-w-[300px] bg-white dark:bg-gray-800 rounded-2xl shadow-lg overflow-hidden transform hover:scale-105 transition-transform duration-300">
                        <div class="relative">
                            <img src=@hotel.MainImg
                                 alt="@hotel.Name"
                                 class="w-full h-48 object-cover">
                            <div class="absolute top-4 right-4">
                                <span class="bg-green-600 text-white px-2 py-1 rounded-full text-xs font-semibold">
                                    @hotel.AvailableRooms rooms left
                                </span>
                            </div>
                        </div>

                        <div class="p-6">
                            <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-2">@hotel.Name</h3>
                            <p class="text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-2">@hotel.Description</p>

                            <div class="space-y-2 mb-4">
                                <div class="flex items-center text-sm text-gray-600 dark:text-gray-400">
                                    <i class="fas fa-map-marker-alt mr-2 text-red-500"></i>
                                    <span>@hotel.City, @hotel.Country?.Name</span>
                                </div>
                                <div class="flex items-center text-sm text-gray-600 dark:text-gray-400">
                                    <i class="fas fa-phone mr-2 text-green-500"></i>
                                    <span>@hotel.Phone</span>
                                </div>
                            </div>

                            <div class="flex items-center justify-between">
                                <div class="text-2xl font-bold text-indigo-600 dark:text-indigo-400">
                                    $@hotel.PricePerNight.ToString("N2")<span class="text-sm font-normal text-gray-600">/night</span>
                                </div>
                                <a asp-controller="Hotel" asp-action="Details" asp-route-id="@hotel.Id" class="btn-primary btn-sm">
                                    <i class="fas fa-bookmark mr-1"></i>Book
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <button class="carousel-nav prev" id="prevHotel">
                <i class="fas fa-chevron-left"></i>
            </button>
            <button class="carousel-nav next" id="nextHotel">
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </div>
</section>

<!-- Reviews Section -->
<section id="reviews" class="section-padding">
    <div class="container mx-auto px-6">
        <div class="text-center mb-12">
            <h2 class="section-title">What Travelers Say</h2>
            <p class="section-subtitle">Real experiences from our community</p>
        </div>

        <div class="reviews-carousel relative">
            <div class="reviews-container flex gap-6 overflow-x-auto pb-6 scrollbar-hide" id="reviewsContainer">
                @foreach (var review in Model.Reviews)
                {
                    <div class="review-card min-w-[320px] bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 transform hover:scale-105 transition-transform duration-300">
                        <div class="flex items-center mb-4">
                            <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold text-lg mr-4">
                                @review.User?.UserName?[0].ToString().ToUpper()
                            </div>
                            <div>
                                <h4 class="font-semibold text-gray-800 dark:text-white">@review.User?.UserName</h4>
                                <p class="text-sm text-gray-600 dark:text-gray-400">@review.CreatedAt.ToString("MMM dd, yyyy")</p>
                            </div>
                        </div>

                        <div class="flex mb-4">
                            @for (int i = 1; i <= 5; i++)
                            {
