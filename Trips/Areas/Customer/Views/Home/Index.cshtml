@model HomeVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home";
}

<div class="container">
    <!-- Hero Section -->
    <section id="home" class="hero-section text-white h-[60vh] flex flex-col items-center justify-center text-center p-4">
        <div class="bg-black/40 p-8 rounded-xl">

            <h1 class="text-4xl md:text-6xl font-bold mb-4">Discover Your Next Adventure</h1>
            <h2 class="sec__title">
                Amazing
                <span class="cd-words-wrapper red">
                    <b class="is-visible font-bold">Tours</b>
                    <b>Adventures</b>
                    <b>Flights</b>
                    <b>Hotels</b>
                    <b>Package Deals</b>
                    <b>Fun</b>
                    <b>People</b>
                </span>
                Waiting for You
            </h2>
        </div>
        <p class="text-lg md:text-xl max-w-2xl">Book flights, find packages, and explore the world with us.</p>
    </section>

    <!-- Flight Search Section -->
    <section id="flights" class="container mx-auto px-6 py-12 -mt-20 relative">
        <div class="bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-lg">
            <h2 class="text-3xl font-bold text-center text-gray-800 dark:text-white mb-8">Search for Flights <i class="fas fa-search ml-2"></i></h2>
            <form class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 items-end">
                <div class="space-y-2">
                    <label for="from" class="block font-medium text-gray-700">From</label>
                    <select id="from" name="From"
                            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600
               bg-white dark:bg-gray-700 rounded-lg focus:ring-2
               focus:ring-blue-500 focus:border-blue-500 transition
               appearance-none relative">
                        <option value="" disabled selected hidden>Select a country</option>
                        @foreach (var country in Model.AirportsName as List<string>)
                        {
                            <option value="@country">@country</option>
                        }
                    </select>
                </div>

                <div class="space-y-2">
                    <label for="to" class="block font-medium text-gray-700">To</label>
                    <select id="to" name="To"
                            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600
               bg-white dark:bg-gray-700 rounded-lg focus:ring-2
               focus:ring-blue-500 focus:border-blue-500 transition
               appearance-none relative">
                        <option value="" disabled selected hidden>Select a country</option>
                        @foreach (var country in Model.AirportsName as List<string>)
                        {
                            <option value="@country">@country</option>
                        }
                    </select>
                </div>
                <div class="space-y-2">
                    <label for="departure" class="block font-medium text-gray-700 dark">Departure</label>
                    <input type="date" id="departure" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 rounded-lg focus:ring-blue-500 focus:border-blue-500 transition">
                </div>
                <div class="space-y-2">
                    <label for="return" class="block font-medium text-gray-700 dark">Return</label>
                    <input type="date" id="return" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 rounded-lg focus:ring-blue-500 focus:border-blue-500 transition">
                </div>
                <button type="submit" class="w-full bg-blue-600 text-white font-bold px-4 py-3 rounded-lg hover:bg-blue-700 transition-colors duration-300 col-span-1 md:col-span-2 lg:col-span-1">
                    Search
                </button>
            </form>
        </div>
    </section>

    <!-- Top Destinations Section -->
    <section id="destinations" class="py-12">
        <div class="container mx-auto px-6">
            <h2 class="text-3xl font-bold text-center text-gray-800 dark:text-white mb-8">Top Destinations</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- Cards will be dynamically inserted here if needed, or static like below -->
                <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg transform hover:-translate-y-2 transition-transform duration-300">
                    <img src="https://placehold.co/600x400/3498db/FFFFFF?text=Paris" alt="Paris" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-800 dark:text-white">Paris, France</h3>
                        <p class="text-gray-600 dark:text-gray-400 mt-2">The city of love, lights, and art.</p>
                    </div>
                </div>
                <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg transform hover:-translate-y-2 transition-transform duration-300">
                    <img src="https://placehold.co/600x400/red/FFFFFF?text=Rome" alt="Rome" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-800 dark:text-white">Rome, Italy</h3>
                        <p class="text-gray-600 dark:text-gray-400 mt-2">Explore ancient history and savor amazing pasta.</p>
                    </div>
                </div>
                <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg transform hover:-translate-y-2 transition-transform duration-300">
                    <img src="https://placehold.co/600x400/2ecc71/FFFFFF?text=Tokyo" alt="Tokyo" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-800 dark:text-white">Tokyo, Japan</h3>
                        <p class="text-gray-600 dark:text-gray-400 mt-2">A vibrant mix of tradition and futuristic technology.</p>
                    </div>
                </div>
                <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg transform hover:-translate-y-2 transition-transform duration-300">
                    <img src="https://placehold.co/600x400/f1c40f/FFFFFF?text=Sydney" alt="Sydney" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-800 dark:text-white">Sydney, Australia</h3>
                        <p class="text-gray-600 dark:text-gray-400 mt-2">Famous for its harbourfront opera house.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Hotels -->
    <section id="hotels" class="py-12 bg-gray-100 dark:bg-gray-900">
        <div class="container mx-auto px-6">
            <h2 class="text-3xl font-bold text-center text-gray-800 dark:text-white mb-8">
                Available Hotels
            </h2>

            <!-- Slider Wrapper -->
            <div class="relative overflow-hidden">
                @if (Model.Hotels.Count > 0)
                {
                    <div id="hotelSlider" class="flex gap-6 transition-transform duration-500">
                        @foreach (var hotel in Model.Hotels)  // Assuming Model.Hotels is your list
                        {
                            <div class="min-w-[300px] max-w-[300px] bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg flex-shrink-0">
                                <img src="https://placehold.co/600x400?text=@hotel.City"
                                     alt="@hotel.Name"
                                     class="w-full h-40 object-cover">
                                <div class="p-4">
                                    <h3 class="text-xl font-semibold text-gray-800 dark:text-white">@hotel.Name</h3>
                                    <p class="text-gray-600 dark:text-gray-400 mt-1">@hotel.Description</p>
                                    <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">
                                        📍 @hotel.City, @hotel.Country?.Name
                                    </p>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">
                                        ☎️ @hotel.Phone
                                    </p>
                                    <p class="mt-2 font-bold text-indigo-600 dark:text-indigo-400">
                                        $@hotel.PricePerNight / night
                                    </p>
                                    <p class="text-sm text-gray-500">
                                        Rooms Available: @hotel.AvailableRooms
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {

                    <div class="flex items-center justify-center h-screen">
                        <p class="font-bold text-lg">There is no Hotels to show.</p>
                    </div>
                }
                <!-- Navigation Buttons -->
                <button id="prevHotel"
                        class="absolute left-0 top-1/2 -translate-y-1/2 bg-gray-800 text-white px-3 py-2 rounded-full">
                    ‹
                </button>
                <button id="nextHotel"
                        class="absolute right-0 top-1/2 -translate-y-1/2 bg-gray-800 text-white px-3 py-2 rounded-full">
                    ›
                </button>
            </div>
        </div>
    </section>

    <!-- Reviews -->
    <section id="reviews" class="py-12">
        <div class="container mx-auto px-6">
            <h2 class="text-3xl font-bold text-center text-gray-800 dark:text-white mb-8">
                What Our Users Say
            </h2>

            <!-- Slider Wrapper -->
            <div class="relative overflow-hidden">
                @if (Model.Reviews != null && Model.Reviews.Count > 0)
                {
                    <div id="reviewSlider" class="flex gap-6 transition-transform duration-500">
                        @foreach (var review in Model.Reviews)
                        {
                            <div class="min-w-[300px] max-w-[300px] bg-gray-100 dark:bg-gray-900 rounded-lg shadow-lg p-6 flex-shrink-0">
                                <div class="flex items-center justify-between mb-3">
                                    <span class="font-bold text-gray-800 dark:text-white">
                                        @review.User?.UserName
                                    </span>
                                    <span class="text-sm text-gray-500 dark:text-gray-400">
                                        @review.CreatedAt.ToString("MMM dd, yyyy")
                                    </span>
                                </div>

                                <!-- Rating Stars -->
                                <div class="flex mb-3">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= review.Rating)
                                        {
                                            <span class="text-yellow-400">★</span>
                                        }
                                        else
                                        {
                                            <span class="text-gray-400">★</span>
                                        }
                                    }
                                </div>

                                <p class="text-gray-700 dark:text-gray-300 italic">
                                    "@review.Comment"
                                </p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="flex items-center justify-center h-48">
                        <p class="font-bold text-lg text-gray-600 dark:text-gray-300">
                            No reviews yet. Be the first to share your experience!
                        </p>
                    </div>
                }

                <!-- Navigation Buttons -->
                <button id="prevReview"
                        class="absolute left-0 top-1/2 -translate-y-1/2 bg-gray-800 text-white px-3 py-2 rounded-full">
                    ‹
                </button>
                <button id="nextReview"
                        class="absolute right-0 top-1/2 -translate-y-1/2 bg-gray-800 text-white px-3 py-2 rounded-full">
                    ›
                </button>
            </div>
        </div>
    </section>
    <!-- Contact Section -->
    <section id="contact" class="py-12 bg-gray-100 dark:bg-black/20">
        <div class="container mx-auto px-6">
            <h2 class="text-3xl font-bold text-center text-gray-800 dark:text-white mb-8">Contact Us</h2>
            <div class="max-w-3xl mx-auto bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-lg">
                <form>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                        <input type="text" placeholder="Your Name" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 rounded-lg focus:ring-blue-500 focus:border-blue-500 transition">
                        <input type="email" placeholder="Your Email" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 rounded-lg focus:ring-blue-500 focus:border-blue-500 transition">
                    </div>
                    <textarea rows="5" placeholder="How can we help you?" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 rounded-lg focus:ring-blue-500 focus:border-blue-500 transition mb-6"></textarea>
                    <div class="text-center">
                        <button type="submit" class="bg-blue-600 text-white font-bold px-8 py-3 rounded-lg hover:bg-blue-700 transition-colors duration-300">
                            Send Message
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
