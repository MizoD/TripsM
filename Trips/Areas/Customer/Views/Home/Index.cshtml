</section>

<!-- Stats Section -->
<section class="section-padding bg-gradient-to-r from-blue-600 to-purple-700 text-white">
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
            <div class="stat-item">
                <div class="text-4xl md:text-5xl font-bold mb-2">1K+</div>
                <div class="text-blue-100">Happy Travelers</div>
            </div>
            <div class="stat-item">
                <div class="text-4xl md:text-5xl font-bold mb-2">100+</div>
                <div class="text-blue-100">Destinations</div>
            </div>
            <div class="stat-item">
                <div class="text-4xl md:text-5xl font-bold mb-2">24/7</div>
                <div class="text-blue-100">Support</div>
            </div>
            <div class="stat-item">
                <div class="text-4xl md:text-5xl font-bold mb-2">5★</div>
