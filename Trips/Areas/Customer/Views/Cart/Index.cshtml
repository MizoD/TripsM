@model CartIndexResponse
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="max-w-7xl mx-auto bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
    <!-- Header -->
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-8">
        <div>
            <h1 class="text-4xl font-bold text-gray-900 mb-2">Your Cart</h1>
            <p class="text-gray-600">Review your selected items before checkout</p>
        </div>

        @if (Model.Items.Any())
        {
            <form asp-action="Clear" method="post" class="mt-4 lg:mt-0">
                @Html.AntiForgeryToken()
                <button type="submit"
                        class="px-6 py-3 border border-red-300 text-red-600 rounded-lg hover:bg-red-50 transition-all duration-200 font-medium"
                        onclick="return confirm('Are you sure you want to clear your entire cart?')">
                    <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                    Clear Cart
                </button>
            </form>
        }
    </div>

    <!-- Success Message -->
    @if (TempData["Success"] != null)
    {
        <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg flex items-center">
            <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-green-800">@TempData["Success"]</span>
            <button type="button" class="ml-auto text-green-600 hover:text-green-800" onclick="this.parentElement.remove()">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
    }

    @if (!Model.Items.Any())
    {
        <!-- Empty Cart State -->
        <div class="text-center py-16">
            <div class="mb-6">
                <svg class="w-24 h-24 text-gray-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-600 mb-3">Your cart is empty</h3>
            <p class="text-gray-500 mb-8 max-w-md mx-auto">Start exploring our amazing travel deals and add some flights or accommodations to your cart!</p>
            <a href="/" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transform hover:scale-105 transition-all duration-200 shadow-sm">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
                Explore Deals
            </a>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Cart Items -->
            <div class="lg:col-span-2 space-y-6">
                @{
                    // Group flight items by flight ID to show seats together
                    var flightGroups = Model.Items
                    .Where(i => i.Type == "Flight")
                    .GroupBy(i => i.ItemId)
                    .ToList();
                }

                <!-- Flight Cart Items -->
                @foreach (var flightGroup in flightGroups)
                {
                    var firstItem = flightGroup.First();
                    var seatCount = flightGroup.Count();
                    var totalFlightPrice = flightGroup.Sum(i => i.Price);

                    <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm hover:shadow-md transition-all duration-300">
                        <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between mb-4">
                            <div class="flex items-start space-x-4 mb-4 lg:mb-0">
                                <div class="bg-blue-100 rounded-lg p-3">
                                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold text-gray-900 mb-2">@firstItem.Title</h3>
                                    <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600">
                                        <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-xs font-medium">
                                            @seatCount @(seatCount == 1 ? "Seat" : "Seats")
                                        </span>
                                        <span class="flex items-center">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                            </svg>
                                            @firstItem.TravelDate?.ToString("MMM dd, yyyy")
                                        </span>
                                        <span class="flex items-center">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                            @firstItem.Coach Class
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="text-right">
                                <div class="text-2xl font-bold text-gray-900">$@totalFlightPrice.ToString("N2")</div>
                                <div class="text-sm text-gray-500">$@(firstItem.Price.ToString("N2")) per seat</div>
                            </div>
                        </div>

                        <!-- Selected Seats -->
                        <div class="bg-gray-50 rounded-lg p-4">
                            <h4 class="font-semibold text-gray-900 mb-3">Selected Seats</h4>
                            <div class="flex flex-wrap gap-2">
                                @foreach (var seatItem in flightGroup)
                                {
                                    <div class="flex items-center space-x-2 bg-white px-3 py-2 rounded-lg border border-gray-200">
                                        <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                        </svg>
                                        <span class="font-medium text-gray-900">@seatItem.SeatNumber</span>
                                        <span class="text-sm text-gray-500">• $@seatItem.Price.ToString("N2")</span>
                                        <form asp-action="Remove" method="post" class="ml-2">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="type" value="Flight" />
                                            <input type="hidden" name="itemId" value="@seatItem.ItemId" />
                                            <input type="hidden" name="seatNumber" value="@seatItem.SeatNumber" />
                                            <button type="submit"
                                                    class="text-red-500 hover:text-red-700 transition-colors"
                                                    onclick="return confirm('Are you sure you want to remove seat @seatItem.SeatNumber?')">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Flight Details -->
                        <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600">
                            <div class="flex items-center">
                                <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                                @firstItem.DepartureAirport → @firstItem.ArrivalAirport
                            </div>
                            <div class="flex items-center">
                                <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                @firstItem.DepartureTime?.ToString("MMM dd, yyyy HH:mm")
                            </div>
                        </div>
                    </div>
                }

                <!-- Hotel Cart Items -->
                @foreach (var item in Model.Items.Where(i => i.Type == "Hotel"))
                {
                    <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm hover:shadow-md transition-all duration-300">
                        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
                            <div class="flex items-start space-x-4 mb-4 lg:mb-0">
                                <div class="bg-green-100 rounded-lg p-3">
                                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold text-gray-900 mb-2">@item.Title</h3>
                                    <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600">
                                        <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-xs font-medium">
                                            Hotel
                                        </span>
                                        <span class="flex items-center">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                            @item.PassengersOrRooms @(item.PassengersOrRooms == 1 ? "Room" : "Rooms")
                                        </span>
                                        <span class="flex items-center">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                            </svg>
                                            Added @item.AddedAt.ToString("MMM dd, yyyy")
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="flex items-center space-x-4">
                                <div class="text-right">
                                    <div class="text-2xl font-bold text-gray-900">$@item.Price.ToString("N2")</div>
                                    <div class="text-sm text-gray-500">Total for @item.PassengersOrRooms room@(item.PassengersOrRooms > 1 ? "s" : "")</div>
                                </div>
                                <form asp-action="Remove" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="type" value="Hotel" />
                                    <input type="hidden" name="itemId" value="@item.ItemId" />
                                    <button type="submit"
                                            class="px-4 py-2 text-red-600 border border-red-300 rounded-lg hover:bg-red-50 transition-colors"
                                            onclick="return confirm('Are you sure you want to remove this hotel from your cart?')">
                                        Remove
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }

                <!-- Trip Cart Items -->
                @foreach (var item in Model.Items.Where(i => i.Type == "Trip"))
                {
                    <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm hover:shadow-md transition-all duration-300">
                        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
                            <div class="flex items-start space-x-4 mb-4 lg:mb-0">
                                <div class="bg-yellow-100 rounded-lg p-3">
                                    <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9" />
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold text-gray-900 mb-2">@item.Title</h3>
                                    <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600">
                                        <span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full text-xs font-medium">
                                            Trip Package
                                        </span>
                                        <span class="flex items-center">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                            @item.PassengersOrRooms @(item.PassengersOrRooms == 1 ? "Person" : "People")
                                        </span>
                                        <span class="flex items-center">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                            </svg>
                                            Added @item.AddedAt.ToString("MMM dd, yyyy")
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="flex items-center space-x-4">
                                <div class="text-right">
                                    <div class="text-2xl font-bold text-gray-900">$@item.Price.ToString("N2")</div>
                                    <div class="text-sm text-gray-500">Total for @item.PassengersOrRooms person@(item.PassengersOrRooms > 1 ? "s" : "")</div>
                                </div>
                                <form asp-action="Remove" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="type" value="Trip" />
                                    <input type="hidden" name="itemId" value="@item.ItemId" />
                                    <button type="submit"
                                            class="px-4 py-2 text-red-600 border border-red-300 rounded-lg hover:bg-red-50 transition-colors"
                                            onclick="return confirm('Are you sure you want to remove this trip from your cart?')">
                                        Remove
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Order Summary -->
            <div class="lg:col-span-1">
                <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-lg sticky top-6">
                    <h2 class="text-xl font-bold text-gray-900 mb-4">Order Summary</h2>

                    @{
                        var totalItems = Model.Items.Count;
                        var totalPrice = Model.Items.Sum(i => i.Price);
                        var flightSeatsCount = Model.Items.Count(i => i.Type == "Flight");
                        var flightCount = flightGroups.Count;
                        var hotelCount = Model.Items.Count(i => i.Type == "Hotel");
                        var tripCount = Model.Items.Count(i => i.Type == "Trip");
                        var totalPassengers = Model.Items.Sum(i => i.PassengersOrRooms);
                    }

                    <div class="space-y-3 mb-4">
                        <div class="flex justify-between items-center">
                            <span class="text-gray-600">Total Items:</span>
                            <span class="font-semibold text-gray-900">@totalItems</span>
                        </div>

                        <div class="flex justify-between items-center">
                            <span class="text-gray-600">Total Passengers/Rooms:</span>
                            <span class="font-semibold text-gray-900">@totalPassengers</span>
                        </div>

                        @if (flightCount > 0)
                        {
                            <div class="flex justify-between text-sm text-gray-500">
                                <span>Flights:</span>
                                <span>@flightCount flight@(flightCount > 1 ? "s" : "") • @flightSeatsCount seat@(flightSeatsCount > 1 ? "s" : "")</span>
                            </div>
                        }

                        @if (hotelCount > 0)
                        {
                            <div class="flex justify-between text-sm text-gray-500">
                                <span>Hotels:</span>
                                <span>@hotelCount hotel@(hotelCount > 1 ? "s" : "")</span>
                            </div>
                        }

                        @if (tripCount > 0)
                        {
                            <div class="flex justify-between text-sm text-gray-500">
                                <span>Trips:</span>
                                <span>@tripCount trip@(tripCount > 1 ? "s" : "")</span>
                            </div>
                        }
                    </div>

                    <div class="border-t border-gray-200 pt-4 mb-6">
                        <div class="flex justify-between items-center">
                            <span class="text-lg font-bold text-gray-900">Total Amount:</span>
                            <span class="text-2xl font-bold text-green-600">$@totalPrice.ToString("N2")</span>
                        </div>
                    </div>

                    <form asp-area="Customer" asp-controller="Checkout" asp-action="Pay" method="post" class="w-full">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                class="w-full bg-green-600 text-white px-6 py-4 rounded-lg font-bold hover:bg-green-700 transform hover:scale-105 transition-all duration-200 shadow-sm flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                            </svg>
                            Proceed to Checkout
                        </button>
                    </form>

                    <div class="text-center mt-4">
                        <a href="/" class="inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                            </svg>
                            Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add fade-in animation for cart items
            const items = document.querySelectorAll('.bg-white.border');
            items.forEach((item, index) => {
                item.style.opacity = '0';
                item.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    item.style.transition = 'all 0.5s ease';
                    item.style.opacity = '1';
                    item.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
}