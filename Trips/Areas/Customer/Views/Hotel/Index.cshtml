@model PaginatedHotelResponse

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Hotels";
}

<div class="max-w-6xl mx-auto bg-white p-8 rounded-lg shadow-xl">

    <!-- Breadcrumb -->
    <nav class="text-sm font-medium text-gray-500 mb-6">
        <ol class="list-none p-0 inline-flex">
            <li class="flex items-center">
                <a asp-area="Customer" asp-controller="Home" asp-action="Index"
                   class="text-blue-600 hover:text-blue-800 transition-colors">Home</a>
                <svg class="fill-current w-3 h-3 mx-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                    <path d="M12.95 10.707l.707-.707L8 4.343 6.586 5.757 10.828 10l-4.242 4.243 1.414 1.414L12.95 10.707z" />
                </svg>
            </li>
            <li class="flex items-center">
                <span class="text-gray-700">All Hotels</span>
            </li>
        </ol>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-4">Available Hotels</h1>

    <!-- Filters -->
    <form method="get" class="mb-6 grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
        <input type="text" name="country" value="@Context.Request.Query["country"]"
               placeholder="Filter by Country"
               class="w-full border rounded-lg px-3 py-2 focus:ring focus:ring-blue-300" />

        <input type="text" name="city" value="@Context.Request.Query["city"]"
               placeholder="Filter by City"
               class="w-full border rounded-lg px-3 py-2 focus:ring focus:ring-blue-300" />

        <input type="number" name="numberOfGuests" value="@Context.Request.Query["numberOfGuests"]"
               placeholder="Number of Guests" min="1"
               class="w-full border rounded-lg px-3 py-2 focus:ring focus:ring-blue-300" />

        <button type="submit"
                class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
            Apply Filters
        </button>
    </form>

    <!-- Hotel Cards -->
    <div class="space-y-6">
        @if (Model.Data != null && Model.Data.Any())
        {
            foreach (var hotel in Model.Data)
            {
                <div class="border rounded-lg p-4 shadow hover:shadow-md transition flex flex-col md:flex-row gap-4">
                    <!-- Main Image -->
                    <img src="@hotel.MainImg"
                         alt="@hotel.Name" class="w-full md:w-1/3 h-48 object-cover rounded-lg" />

                    <div class="flex-1 flex flex-col justify-between">
                        <div>
                            <div class="flex justify-between items-center">
                                <h2 class="text-xl font-semibold text-gray-800">@hotel.Name</h2>
                                <span class="text-sm px-2 py-1 rounded bg-gray-200">@hotel.AvailableRooms rooms</span>
                            </div>

                            <p class="text-gray-600 text-sm mt-1">
                                Country: <b>@hotel.Country?.Name</b> | City: <b>@hotel.City</b>
                            </p>

                            <p class="text-gray-600 text-sm mt-1">
                                Phone: <b>@hotel.Phone</b> | Traffic: <b>@hotel.Traffic</b>
                            </p>

                            <p class="text-gray-900 font-bold mt-2">
                                Price per Night: $@hotel.PricePerNight
                            </p>
                        </div>

                        <!-- Buttons -->
                        <div class="mt-3 flex flex-wrap gap-2">
                            <a asp-area="Customer" asp-controller="Hotel" asp-action="Details" asp-route-id="@hotel.Id"
                               class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
                                View Details
                            </a>

                            <form asp-action="AddToCart" method="post" class="inline">
                                <input type="hidden" name="hotelId" value="@hotel.Id" />
                                <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
                                    Add to Cart
                                </button>
                            </form>

                            <form asp-action="AddToWishlist" method="post" class="inline">
                                <input type="hidden" name="hotelId" value="@hotel.Id" />
                                <button type="submit" class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600">
                                    Wishlist
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-gray-500">No hotels found matching your filters.</p>
        }
    </div>

    <!-- Pagination -->
    <div class="flex justify-center items-center space-x-2 mt-8">
        @if (Model.PageNumber > 1)
        {
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageNumber - 1)"
               class="px-3 py-2 border rounded hover:bg-gray-200">Previous</a>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <a asp-action="Index"
               asp-route-pageNumber="@i"
               class="px-3 py-2 border rounded @(i == Model.PageNumber ? "bg-blue-600 text-white" : "hover:bg-gray-200")">
                @i
            </a>
        }

        @if (Model.PageNumber < Model.TotalPages)
        {
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageNumber + 1)"
               class="px-3 py-2 border rounded hover:bg-gray-200">Next</a>
        }
    </div>

    <!-- Top Destinations Section -->
    <section id="destinations" class="py-12">
        <div class="container mx-auto px-6">
            <h2 class="text-3xl font-bold text-center text-gray-800 dark:text-white mb-8">Top Destinations</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- Cards will be dynamically inserted here if needed, or static like below -->
                <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg transform hover:-translate-y-2 transition-transform duration-300">
                    <img src="https://placehold.co/600x400/3498db/FFFFFF?text=Paris" alt="Paris" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-800 dark:text-white">Paris, France</h3>
                        <p class="text-gray-600 dark:text-gray-400 mt-2">The city of love, lights, and art.</p>
                    </div>
                </div>
                <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg transform hover:-translate-y-2 transition-transform duration-300">
                    <img src="https://placehold.co/600x400/red/FFFFFF?text=Rome" alt="Rome" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-800 dark:text-white">Rome, Italy</h3>
                        <p class="text-gray-600 dark:text-gray-400 mt-2">Explore ancient history and savor amazing pasta.</p>
                    </div>
                </div>
                <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg transform hover:-translate-y-2 transition-transform duration-300">
                    <img src="https://placehold.co/600x400/2ecc71/FFFFFF?text=Tokyo" alt="Tokyo" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-800 dark:text-white">Tokyo, Japan</h3>
                        <p class="text-gray-600 dark:text-gray-400 mt-2">A vibrant mix of tradition and futuristic technology.</p>
                    </div>
                </div>
                <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg transform hover:-translate-y-2 transition-transform duration-300">
                    <img src="https://placehold.co/600x400/f1c40f/FFFFFF?text=Sydney" alt="Sydney" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-800 dark:text-white">Sydney, Australia</h3>
                        <p class="text-gray-600 dark:text-gray-400 mt-2">Famous for its harbourfront opera house.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

