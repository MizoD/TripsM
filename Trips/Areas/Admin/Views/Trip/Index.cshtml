@model IEnumerable<Models.Trip>

@{
    ViewData["Title"] = "Trips List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>📋 Trips</h2>
        <a asp-action="Create" class="btn btn-success">➕ Add Trip</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Country</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Price</th>
                <th>Seats</th>
                <th>Available</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trip in Model)
            {
                <tr>
                    <td>@trip.Title</td>
                    <td>@trip.Country?.Name</td>
                    <td>@trip.StartDate.ToShortDateString()</td>
                    <td>@trip.EndDate.ToShortDateString()</td>
                    <td>@trip.Price.ToString("C")</td>
                    <td>@trip.TotalSeats</td>
                    <td>@trip.AvailableSeats</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@trip.Id" class="btn btn-info btn-sm">🔍</a>
                        <a asp-action="Edit" asp-route-id="@trip.Id" class="btn btn-warning btn-sm">✏️</a>
                        <a asp-action="Delete" asp-route-id="@trip.Id" class="btn btn-danger btn-sm">🗑️</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
