@model Models.Trip

@{
    ViewData["Title"] = "Delete Trip";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">🗑️ Delete Trip</h4>
        </div>
        <div class="card-body">
            <h5>Are you sure you want to delete this trip?</h5>
            <dl class="row">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Hotel</dt>
                <dd class="col-sm-9">@Model.Hotel?.Name</dd>

                <dt class="col-sm-3">Start</dt>
                <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

                <dt class="col-sm-3">End</dt>
                <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>
            </dl>
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </form>
        </div>
    </div>
</div>
