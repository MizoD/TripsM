@model Models.Trip

@{
    ViewData["Title"] = "Edit Trip";
    var hotels = ViewData["Hotels"] as List<Models.Hotel>;
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">✏️ Edit Trip</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Title</label>
                        <input asp-for="Title" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Hotel</label>
                        <select asp-for="HotelId" class="form-select" asp-items="@(new SelectList(hotels, "Id", "Name", Model.HotelId))">
                            <option value="">-- Select Hotel --</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Start Date</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">End Date</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Price</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" />
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                    </div>
                </div>
                <div class="mt-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary px-4">Update</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
