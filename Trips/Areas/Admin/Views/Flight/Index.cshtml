    }

    .pagination-container {
        margin-top: 2rem;
    }

    .modal-header {
        border-radius: 10px 10px 0 0;
    }

    .stats-card {
        background: white;
        border-radius: 10px;
        padding: 1.5rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 1.5rem;
    }

