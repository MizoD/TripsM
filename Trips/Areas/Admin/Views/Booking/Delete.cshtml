@model Models.Booking

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Booking";
}

<div class="container mx-auto px-6 py-12">
    <div class="max-w-3xl mx-auto bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-lg">
        <h2 class="text-3xl font-bold text-red-600 mb-6">Delete Booking</h2>
        <p class="text-gray-600 dark:text-gray-300 mb-6">Are you sure you want to delete this booking?</p>

        <dl class="space-y-4">
            <div>
                <dt class="font-semibold text-gray-700 dark:text-gray-200">User</dt>
                <dd class="text-gray-600 dark:text-gray-300">@Model.User?.UserName</dd>
            </div>
            <div>
                <dt class="font-semibold text-gray-700 dark:text-gray-200">Trip</dt>
                <dd class="text-gray-600 dark:text-gray-300">@Model.Trip?.Title</dd>
            </div>
            <div>
                <dt class="font-semibold text-gray-700 dark:text-gray-200">Total</dt>
                <dd class="text-green-600 dark:text-green-400 font-semibold">@Model.TotalAmount.ToString("C")</dd>
            </div>
        </dl>

        <form asp-action="Delete" method="post" class="mt-8 flex justify-between">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="bg-gray-500 text-white px-6 py-3 rounded-lg hover:bg-gray-600">Cancel</a>
            <button type="submit" class="bg-red-600 text-white px-6 py-3 rounded-lg hover:bg-red-700">Delete</button>
        </form>
    </div>
</div>
