@model Models.Booking

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Booking Details";
}

<div class="container mx-auto px-6 py-12">
    <div class="max-w-3xl mx-auto bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-lg">
        <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-6">Booking Details</h2>

        <dl class="space-y-4">
            <div>
                <dt class="font-semibold text-gray-700 dark:text-gray-200">User</dt>
                <dd class="text-gray-600 dark:text-gray-300">@Model.User?.UserName</dd>
            </div>
            <div>
                <dt class="font-semibold text-gray-700 dark:text-gray-200">Trip</dt>
                <dd class="text-gray-600 dark:text-gray-300">@Model.Trip?.Title</dd>
            </div>
            <div>
                <dt class="font-semibold text-gray-700 dark:text-gray-200">Tickets</dt>
                <dd class="text-gray-600 dark:text-gray-300">@Model.NumberOfTickets</dd>
            </div>
            <div>
                <dt class="font-semibold text-gray-700 dark:text-gray-200">Total</dt>
                <dd class="text-green-600 dark:text-green-400 font-semibold">@Model.TotalAmount.ToString("C")</dd>
            </div>
            <div>
                <dt class="font-semibold text-gray-700 dark:text-gray-200">Payment Method</dt>
                <dd>
                    <span class="px-3 py-1 rounded-full text-xs font-semibold
                                @(Model.PaymentMethod == Models.PaymentMethod.CASHONSITE
                                                              ? "bg-yellow-100 text-yellow-800 dark:bg-yellow-700 dark:text-yellow-200"
                                                              : "bg-blue-100 text-blue-800 dark:bg-blue-700 dark:text-blue-200")">
                        @Model.PaymentMethod
                    </span>
                </dd>
            </div>
        </dl>

        <div class="flex justify-between mt-8">
            <a asp-action="Index" class="bg-gray-500 text-white px-6 py-3 rounded-lg hover:bg-gray-600">Back</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-yellow-500 text-white px-6 py-3 rounded-lg hover:bg-yellow-600">Edit</a>
        </div>
    </div>
</div>
