@model Models.Booking

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Booking";
}

<div class="container mx-auto px-6 py-12">
    <div class="max-w-3xl mx-auto bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-lg">
        <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-6">Edit Booking</h2>

        <form asp-action="Edit" method="post" class="space-y-6">
            <input type="hidden" asp-for="Id" />

            <div>
                <label asp-for="UserId" class="block font-semibold text-gray-700 dark:text-gray-200">User</label>
                <input asp-for="UserId" class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600" />
                <span asp-validation-for="UserId" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="TripId" class="block font-semibold text-gray-700 dark:text-gray-200">Trip</label>
                <input asp-for="TripId" class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600" />
                <span asp-validation-for="TripId" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="NumberOfTickets" class="block font-semibold text-gray-700 dark:text-gray-200">Tickets</label>
                <input asp-for="NumberOfTickets" class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600" />
                <span asp-validation-for="NumberOfTickets" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="TotalAmount" class="block font-semibold text-gray-700 dark:text-gray-200">Total</label>
                <input asp-for="TotalAmount" class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600" />
                <span asp-validation-for="TotalAmount" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="PaymentMethod" class="block font-semibold text-gray-700 dark:text-gray-200">Payment</label>
                <select asp-for="PaymentMethod" class="w-full px-4 py-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600">
                    <option value="0">Cash On Site</option>
                    <option value="1">Credit Card</option>
                </select>
                <span asp-validation-for="PaymentMethod" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-between">
                <a asp-action="Index" class="bg-gray-500 text-white px-6 py-3 rounded-lg hover:bg-gray-600">Back</a>
                <button type="submit" class="bg-yellow-500 text-white px-6 py-3 rounded-lg hover:bg-yellow-600">Update</button>
            </div>
        </form>
    </div>
</div>
