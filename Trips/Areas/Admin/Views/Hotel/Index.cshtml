@model IEnumerable<Models.Hotel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Hotels";
}

<div class="container mx-auto px-6 py-12">
    <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-800 dark:text-white">Hotels Management</h2>
        <p class="text-gray-600 dark:text-gray-400 mt-2">View, edit, and manage all hotels in one place.</p>
    </div>

    <div class="bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-lg overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-700">
                <tr>
                    <th class="px-6 py-3 text-left text-sm font-semibold">Name</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold">City</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold">Country</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold">Trip</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold">Price/Night</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold">Rooms</th>
                    <th class="px-6 py-3 text-center text-sm font-semibold">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-100 dark:hover:bg-gray-700 transition">
                        <td class="px-6 py-4">@item.Name</td>
                        <td class="px-6 py-4">@item.City</td>
                        <td class="px-6 py-4">@item.Country?.Name</td>
                        <td class="px-6 py-4">@item.Trip?.Title</td>
                        <td class="px-6 py-4 text-green-600 dark:text-green-400 font-semibold">@item.PricePerNight.ToString("C")</td>
                        <td class="px-6 py-4">@item.AvailableRooms</td>
                        <td class="px-6 py-4 flex gap-2 justify-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="px-3 py-1 rounded-lg bg-blue-600 text-white hover:bg-blue-700">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="px-3 py-1 rounded-lg bg-yellow-500 text-white hover:bg-yellow-600">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="px-3 py-1 rounded-lg bg-red-600 text-white hover:bg-red-700">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-8">
        <a asp-action="Create" class="inline-block bg-green-600 text-white font-bold px-6 py-3 rounded-lg hover:bg-green-700 transition">
            + Create New Hotel
        </a>
    </div>
</div>
