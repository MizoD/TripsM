@model Models.ModelsVM.Response.UserResponse.PagedUserResponse

@{
    ViewData["Title"] = "Users List";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Users</h2>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>Full Name</th>
                    <th>Address</th>
                    <th>Roles</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Users != null && Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@($"{user.FirstName} {user.LastName}")</td>
                            <td>@user.Address</td>
                            <td>@string.Join(", ", user.Roles)</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm me-1">Details</a>
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm me-1">Delete</a>

                                <form asp-action="Block" asp-route-id="@user.Id" method="post" style="display:inline">
                                    <button type="submit" class="btn btn-dark btn-sm me-1">Block</button>
                                </form>
                                <form asp-action="Unblock" asp-route-id="@user.Id" method="post" style="display:inline">
                                    <button type="submit" class="btn btn-success btn-sm">Unblock</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">No users found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Create" class="btn btn-primary">+ Create New User</a>
    </div>
</div>
