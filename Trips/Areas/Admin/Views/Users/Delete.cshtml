@model Models.ModelsVM.Response.UserResponse.UserResponse

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <h2 class="text-center mb-4 text-danger">Delete User</h2>

    <h4>Are you sure you want to delete this user?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">UserName</dt>
        <dd class="col-sm-9">@Model.UserName</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Full Name</dt>
        <dd class="col-sm-9">@($"{Model.FirstName} {Model.LastName}")</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">Roles</dt>
        <dd class="col-sm-9">@string.Join(", ", Model.Roles)</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
