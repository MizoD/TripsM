@model Models.Review

@{
    ViewData["Title"] = "Create Review";
    var users = ViewData["Users"] as List<Models.ApplicationUser>;
    var trips = ViewData["Trips"] as List<Models.Trip>;
    var hotels = ViewData["Hotels"] as List<Models.Hotel>;
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-success text-white fw-bold">➕ Create Review</div>
        <div class="card-body">
            <form asp-action="Create" method="post" class="row g-3">
                <div class="col-md-6">
                    <label>User</label>
                    <select asp-for="UserId" class="form-select" asp-items="@(new SelectList(users, "Id", "UserName"))">
                        <option value="">-- Select User --</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label>Trip</label>
                    <select asp-for="TripId" class="form-select" asp-items="@(new SelectList(trips, "Id", "Title"))">
                        <option value="">-- Select Trip --</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label>Hotel</label>
                    <select asp-for="HotelId" class="form-select" asp-items="@(new SelectList(hotels, "Id", "Name"))">
                        <option value="">-- Select Hotel --</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label>Rating</label>
                    <input asp-for="Rating" type="number" min="1" max="5" class="form-control" />
                </div>

                <div class="col-12">
                    <label>Comment</label>
                    <textarea asp-for="Comment" class="form-control"></textarea>
                </div>

                <div class="col-12 mt-3">
                    <button type="submit" class="btn btn-success">💾 Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
