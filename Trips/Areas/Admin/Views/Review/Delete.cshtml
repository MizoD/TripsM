@model Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<div class="container mt-4">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">⚠️ Delete Review</h4>
        </div>
        <div class="card-body">
            <p>Are you sure you want to delete this review?</p>

            <ul class="list-group mb-3">
                <li class="list-group-item"><strong>User:</strong> @Model.User?.UserName</li>
                <li class="list-group-item"><strong>Trip:</strong> @Model.Trip?.Title</li>
                <li class="list-group-item"><strong>Hotel:</strong> @Model.Hotel?.Name</li>
                <li class="list-group-item"><strong>Rating:</strong> @Model.Rating ★</li>
                <li class="list-group-item"><strong>Comment:</strong> @Model.Comment</li>
            </ul>
        </div>
        <div class="card-footer d-flex gap-2">
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">✅ Yes, Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">❌ Cancel</a>
        </div>
    </div>
</div>
