@model IEnumerable<Models.Review>

@{
    ViewData["Title"] = "Reviews";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">📋 Reviews Management</h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            ➕ Add Review
        </a>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>User</th>
                        <th>Trip</th>
                        <th>Hotel</th>
                        <th>Rating</th>
                        <th>Comment</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var review in Model)
                    {
                        <tr>
                            <td>@review.User?.UserName</td>
                            <td>@review.Trip?.Title</td>
                            <td>@review.Hotel?.Name</td>
                            <td>
                                <span class="badge bg-@(review.Rating >= 4 ? "success" : review.Rating == 3 ? "warning text-dark" : "danger")">
                                    ⭐ @review.Rating
                                </span>
                            </td>
                            <td>@review.Comment</td>
                            <td>@review.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@review.Id" class="btn btn-info btn-sm">👁</a>
                                <a asp-action="Edit" asp-route-id="@review.Id" class="btn btn-warning btn-sm">✏️</a>
                                <a asp-action="Delete" asp-route-id="@review.Id" class="btn btn-danger btn-sm">🗑</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
